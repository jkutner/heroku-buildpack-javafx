#!/usr/bin/env bash

# fail fast
set -eu

# parse args
BP_DIR="$(cd "$(dirname "$0")" && pwd)"
BUILD_DIR=$1
OPT_DIR=$BP_DIR/../opt/

cd $BUILD_DIR

curl --retry 3 -s -o javafx.zip -L https://chriswhocodes.com/downloads/openjfx-8u60-sdk-overlay-linux-amd64.zip

if [ -d .jdk ]; then
  unzip javafx.zip -d .jdk
else
  unzip javafx.zip -d .jdk-overlay
fi

rm javafx.zip
